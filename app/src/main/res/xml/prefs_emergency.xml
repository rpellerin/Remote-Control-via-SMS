<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<PreferenceCategory android:title="@string/pref_general" >
	    <Preference 
	        android:key="emergency_about"  
	        android:selectable="false" 
	        android:summary="@string/emergency_about">                      
    	</Preference>
        <SwitchPreference
            android:defaultValue="false"
            android:key="emergency_enable"
            android:switchTextOff="@string/pref_off"
            android:switchTextOn="@string/pref_on"
            android:title="@string/pref_enable"
            android:summaryOn="@string/pref_enabled"
            android:summaryOff="@string/pref_disabled"/>
        <EditTextPreference
            android:defaultValue="EMERGENCY!"
            android:key="emergency_sms"
            android:inputType="textNoSuggestions"
            android:maxLength="500"
            android:title="@string/sms_to_send" />
        <EditTextPreference
            android:defaultValue="123"
            android:key="emergency_recipient"
            android:inputType="textNoSuggestions"
            android:maxLength="500"
            android:title="@string/recipient" />
    </PreferenceCategory>
</PreferenceScreen>